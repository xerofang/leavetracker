<%- include('../layouts/main', { body: `
<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-person-plus"></i> Apply Leave on Behalf</h5>
      </div>
      <div class="card-body p-4">
        <form method="POST" action="/admin/apply-behalf" id="leaveForm">
          <div class="mb-3">
            <label for="employee_id" class="form-label">Select Employee <span class="text-danger">*</span></label>
            <select class="form-select" id="employee_id" name="employee_id" required>
              <option value="">Choose employee...</option>
              ${employees.map(e => `<option value="${e.id}">${e.first_name} ${e.last_name} (${e.email})</option>`).join('')}
            </select>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="leave_type_id" class="form-label">Leave Type <span class="text-danger">*</span></label>
              <select class="form-select" id="leave_type_id" name="leave_type_id" required>
                <option value="">Select leave type</option>
                ${leaveTypes.map(lt => `<option value="${lt.id}">${lt.name}</option>`).join('')}
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Employee Balance</label>
              <div id="balanceInfo" class="form-control bg-light">Select employee and leave type</div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="start_date" class="form-label">Start Date <span class="text-danger">*</span></label>
              <input type="date" class="form-control" id="start_date" name="start_date" required>
            </div>
            <div class="col-md-6">
              <label for="end_date" class="form-label">End Date <span class="text-danger">*</span></label>
              <input type="date" class="form-control" id="end_date" name="end_date" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Working Days</label>
              <div id="workingDays" class="form-control bg-light">0 days</div>
            </div>
          </div>

          <div class="mb-4">
            <label for="reason" class="form-label">Reason</label>
            <textarea class="form-control" id="reason" name="reason" rows="3" placeholder="Enter reason for leave"></textarea>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/admin/requests" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-send"></i> Submit Request
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('employee_id').addEventListener('change', loadBalance);
document.getElementById('leave_type_id').addEventListener('change', loadBalance);
document.getElementById('start_date').addEventListener('change', calculateDays);
document.getElementById('end_date').addEventListener('change', calculateDays);

async function loadBalance() {
  const employeeId = document.getElementById('employee_id').value;
  const leaveTypeId = document.getElementById('leave_type_id').value;

  if (employeeId && leaveTypeId) {
    const response = await fetch('/admin/api/employee-balance/' + employeeId);
    const balances = await response.json();
    const balance = balances.find(b => b.leaveType.id == leaveTypeId);
    document.getElementById('balanceInfo').textContent = balance ? balance.available.toFixed(1) + ' days available' : 'No balance found';
  } else {
    document.getElementById('balanceInfo').textContent = 'Select employee and leave type';
  }
}

async function calculateDays() {
  const start = document.getElementById('start_date').value;
  const end = document.getElementById('end_date').value;

  if (start && end) {
    const response = await fetch('/employee/api/calculate-days?start=' + start + '&end=' + end);
    const data = await response.json();
    document.getElementById('workingDays').textContent = data.days + ' working day' + (data.days !== 1 ? 's' : '');
  }
}
</script>
` }) %>
