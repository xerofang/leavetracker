<%- include('../layouts/main', { body: `
<style>
  .login-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-card {
    width: 100%;
    max-width: 420px;
  }

  .login-logo {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #212529 0%, #495057 100%);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .dark .login-logo {
    background: linear-gradient(135deg, #4f6bed 0%, #7c8ff0 100%);
  }

  .login-logo i {
    font-size: 2rem;
    color: white;
  }

  .login-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--foreground);
    margin-bottom: 0.25rem;
  }

  .login-subtitle {
    color: var(--muted-foreground);
    font-size: 0.875rem;
  }

  .login-input-group {
    position: relative;
  }

  .login-input-group .input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--muted-foreground);
    z-index: 1;
    pointer-events: none;
  }

  .login-input-group .form-control {
    padding-left: 3rem;
    min-height: 52px;
    font-size: 1rem;
  }

  .login-btn {
    min-height: 52px;
    font-size: 1rem;
    font-weight: 600;
  }

  .login-footer {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .theme-toggle-login {
    position: fixed;
    top: 1rem;
    right: 1rem;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 9999px;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.15s ease;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .theme-toggle-login:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: scale(1.05);
  }

  .theme-toggle-login i {
    color: var(--foreground);
    font-size: 1.25rem;
  }
</style>

<!-- Theme toggle for login page -->
<button class="theme-toggle-login" onclick="toggleTheme()" title="Toggle theme">
  <i class="bi bi-sun-fill" id="lightIconLogin"></i>
  <i class="bi bi-moon-fill d-none" id="darkIconLogin"></i>
</button>

<div class="login-container">
  <div class="login-card">
    <div class="card shadow-lg fade-in-up">
      <div class="card-body p-5">
        <!-- Logo & Title -->
        <div class="text-center mb-5">
          <div class="login-logo">
            <i class="bi bi-calendar-check"></i>
          </div>
          <h1 class="login-title">${companyName}</h1>
          <p class="login-subtitle">Leave Management System</p>
        </div>

        <!-- Login Form -->
        <form method="POST" action="/login">
          <div class="mb-4">
            <label for="email" class="form-label">Email Address</label>
            <div class="login-input-group">
              <i class="bi bi-envelope input-icon"></i>
              <input type="email" class="form-control" id="email" name="email"
                placeholder="you@company.com" required autofocus autocomplete="email">
            </div>
          </div>

          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <div class="login-input-group">
              <i class="bi bi-lock input-icon"></i>
              <input type="password" class="form-control" id="password" name="password"
                placeholder="Enter your password" required autocomplete="current-password">
            </div>
          </div>

          <button type="submit" class="btn btn-primary w-100 login-btn">
            <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
          </button>
        </form>

        <!-- Footer -->
        <div class="login-footer">
          <p class="text-muted mb-0">
            <small><i class="bi bi-question-circle me-1"></i> Forgot password? Contact HR</small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize login page theme icons
  document.addEventListener('DOMContentLoaded', function() {
    var isDark = document.documentElement.classList.contains('dark');
    var lightIcon = document.getElementById('lightIconLogin');
    var darkIcon = document.getElementById('darkIconLogin');
    if (lightIcon && darkIcon) {
      lightIcon.classList.toggle('d-none', isDark);
      darkIcon.classList.toggle('d-none', !isDark);
    }
  });

  // Override toggleTheme for login page icons
  var originalToggle = window.toggleTheme;
  window.toggleTheme = function() {
    if (originalToggle) originalToggle();
    var isDark = document.documentElement.classList.contains('dark');
    var lightIcon = document.getElementById('lightIconLogin');
    var darkIcon = document.getElementById('darkIconLogin');
    if (lightIcon && darkIcon) {
      lightIcon.classList.toggle('d-none', isDark);
      darkIcon.classList.toggle('d-none', !isDark);
    }
  };
</script>
` }) %>
